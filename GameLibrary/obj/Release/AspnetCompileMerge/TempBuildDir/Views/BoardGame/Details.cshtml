@model BGGdotNET.Objects.BoardGame

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>BoardGame</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Game Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BoardGameName.First(x => x.isPrimary == true).name)
        </dd>
        <dt>
            Year Published:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.yearPublished)
        </dd>

        <dt>
            Minimum Players:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.minPlayers)
        </dd>

        <dt>
            Maximum Players:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.maxPlayers)
        </dd>

        <dt>
            Playing Time:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.playingTime)
        </dd>

        <dt>
            Suggested Age:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.age)
        </dd>

        <dt>
            Description:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>

        <dt>
            Categories:
        </dt>
        <dd>
            @foreach (var cat in Model.BoardGameCategories)
            {
                @Html.DisplayFor(modelItem => cat.value)@:,

            }
        </dd>
        <dt>
            Mechancis:
        </dt>
        <dd>
            @foreach (var cat in Model.BoardGameMechanics)
            {
                @Html.DisplayFor(modelItem => cat.value)@:,

            }
        </dd>
        <dt>
            Sub-domains:
        </dt>
        <dd>
            @foreach (var cat in Model.BoardGameSubdomains)
            {
                @Html.DisplayFor(modelItem => cat.value)@:,

            }
        </dd>
        <dt>
            Honors:
        </dt>
        <dd>
            @foreach (var cat in Model.BoardGameHonors)
            {
                @Html.DisplayFor(modelItem => cat.value)@:,

            }
        </dd>
        <dt>
            Designers:
        </dt>
        <dd>
            @foreach (var cat in Model.BoardGameDesigner)
            {
                @Html.DisplayFor(modelItem => cat.value)@:,

            }
        </dd>
        <dt>
            Publishers:
        </dt>
        <dd>
            @foreach (var cat in Model.BoardGamePublisher)
            {
                @Html.DisplayFor(modelItem => cat.value)@:,

            }
        </dd>
        <dt>
            Expansions:
        </dt>
        <dd>
            @foreach (var cat in Model.BoardGameExpansions)
            {
                @Html.DisplayFor(modelItem => cat.value)@:,

            }
        </dd>


    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ObjectID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
